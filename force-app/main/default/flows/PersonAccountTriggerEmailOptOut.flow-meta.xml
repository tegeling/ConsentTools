<?xml version="1.0" encoding="UTF-8" ?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description
  >Triggered when HasOptedOutOfEmail is changed, updates all related email consent records</description>
    <interviewLabel
  >PersonAccountTriggerEmailOptOut {!$Flow.CurrentDateTime}</interviewLabel>
    <label>PersonAccountTriggerEmailOptOut</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Invoke_HasOptedOutOfEmailSub</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>PersonIndividualId</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>PersonHasOptedOutOfEmail</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Invoke_HasOptedOutOfEmailSub</name>
        <label>Invoke HasOptedOutOfEmailSub</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <flowName>HasOptedOutOfEmailSub</flowName>
        <inputAssignments>
            <name>hasOptedOutOfEmail</name>
            <value>
                <elementReference
        >$Record.PersonHasOptedOutOfEmail</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>individualId</name>
            <value>
                <elementReference>$Record.PersonIndividualId</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>

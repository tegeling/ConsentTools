<?xml version="1.0" encoding="UTF-8" ?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <description
  >Triggered when DoNotCall is changed, updates all related phone consent records</description>
    <interviewLabel
  >PersonAccountTriggerPhoneOptOut {!$Flow.CurrentDateTime}</interviewLabel>
    <label>PersonAccountTriggerPhoneOptOut</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Invoke_HasOptedOutOfPhoneSub</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>PersonIndividualId</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>PersonDoNotCall</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Account</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Invoke_HasOptedOutOfPhoneSub</name>
        <label>Invoke HasOptedOutOfPhoneSub</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <flowName>HasOptedOutOfPhoneSub</flowName>
        <inputAssignments>
            <name>hasOptedOutOfPhone</name>
            <value>
                <elementReference>$Record.PersonDoNotCall</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <name>individualId</name>
            <value>
                <elementReference>$Record.PersonIndividualId</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>
